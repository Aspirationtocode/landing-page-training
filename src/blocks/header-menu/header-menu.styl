.header-menu
	display flex
	justify-content space-between
	max-width 729px
	flex-grow 2

	@media screen and (max-width: 1200px)
		max-width 620px

	@media screen and (max-width: 840px)
		display none
		max-width 100%

	&.mobile-active
		display flex
		justify-content center
		align-items center
		flex-direction column
		position absolute
		top 0
		left 0
		height 100vh
		width 100vw
		background-color #000
		opacity .99
		z-index 10

		.header-menu__item
			font-size 1.5rem


	&__item
		white-space nowrap
		padding 14px 10px
		padding-top 14px
		padding-bottom 14px
		position relative
		color #fff
		font-size 14px
		text-transform uppercase
		transition all ease .2s
		@media screen and (max-width: 1200px)
			padding 14px 4px

		&:before
			opacity 0
			content ""
			top 50px
			left 0
			width 100%
			height 1px
			position absolute
			background-color #e74c3c
			transition all ease .2s

		&:hover
			color #e74c3c
			cursor pointer

			&:before
				opacity 1
