.header-slider
	position relative
	margin-top 234px
	z-index 1
	display flex
	justify-content center
	@media screen and (max-width: 560px)
		margin-top 132px

	&__main
		width 80%
		user-select none
		@media screen and (max-width: 680px)
			width 96%

	&-slide
		text-align center
		padding 0 50px
		width 100%

	&__sub-header
		font-family SourceSansProRegular
		font-size 24px
		letter-spacing 1.2px
		color #f4f5f9
		margin-bottom 35px
		@media screen and (max-width: 840px)
			font-size 20px

	&__header
		text-transform uppercase
		font-family OpenSansBold
		font-size 72px
		font-weight bold
		letter-spacing 7.2px
		text-align center
		color #f4f5f9
		line-height 1
		@media screen and (max-width: 1200px)
			font-size 56px
		@media screen and (max-width: 960px)
			font-size 40px
			line-height 1.2

	&__text
		width 64%
		margin 0 auto
		font-size 14px
		line-height 1.71
		text-align center
		color #cbc6c0
		margin-bottom 60px

	&__nav
		border none
		position absolute
		top 111px
		size(45px)
		background-color #6F6A64
		transition all ease .2s

		@media screen and (max-width: 680px)
			display none

		&:hover
			cursor pointer
			background-color #e74c3c
			&::before
				background-color #fff
			&::after
				background-color #fff


		&::before
			transition all ease .2s
			content ""
			position absolute
			top 16px
			left 14px
			width 16px
			height 2px
			transform rotate(-45deg)
			background-color #303030

		&::after
			transition all ease .2s
			content ""
			position absolute
			top 26px
			left 14px
			width 16px
			height 2px
			transform rotate(45deg)
			background-color #303030

		&--left
			left 50px
			@media screen and (max-width: 960px)
				transform scale(.7)
				left 20px

		&--right
			transform rotate(180deg)
			right 50px
			@media screen and (max-width: 960px)
				transform scale(.7) rotate(180deg)
				right 20px
