.header
	overflow hidden
	padding-top 40px
	padding-bottom 264px
	image-bg("Background.png")
	background-repeat no-repeat
	background-position 50% 50%
	@media screen and (max-width: 560px)
		padding-top 20px
		padding-bottom 96px
	&__buttons
		display flex
		justify-content center
		align-items center
		@media screen and (max-width: 560px)
			flex-direction column

	&-menu-burger
		image-bg("Burger.svg")
		width 46px
		height 46px
		opacity .75
		transition opacity ease .2s
		display none
		flex-shrink 0
		z-index 20

		&.active
			image-bg("Close.svg")

		&:hover
			cursor pointer
			opacity 1

		@media screen and (max-width: 840px)
			display block

	&__top-line
		display flex
		justify-content space-around
		padding 0 60px
		align-items center
		@media screen and (max-width: 1200px)
			padding 0 40px
		@media screen and (max-width: 460px)
			padding 0 24px
		@media screen and (max-width: 840px)
			justify-content space-between

	&-logo
		z-index 20
		width 141px
		height 52px
		image-bg("Logo.png")
		flex-shrink 0
		margin-right 40px
